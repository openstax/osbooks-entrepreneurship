<tgroup cols="2">
<colspec colnum="1" colname="c1"/>
<colspec colnum="2" colname="c2"/>
<thead>
<row valign="top">
<entry valign="top" align="center" namest="c1" nameend="c2">Executive Summary for La Vida Lola</entry>
</row>
<row valign="top">
<entry valign="top" align="left"><para id="fs-idm350950224">Executive Summary Component</para></entry>
